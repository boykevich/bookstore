@page "/BookPage"

<h1 class="text-center mt-4">Book Details</h1>

<div class="container mt-4">
    <div class="row">
        <!-- Обкладинка книги -->
        <div class="col-md-4 text-center">
            <img src="@FirstBook.ImagePath" alt="Book Cover" class="img-fluid rounded shadow-lg" style="max-width: 100%;">
        </div>

        <!-- Інформація про книгу -->
        <div class="col-md-8">
            <h2>@FirstBook.BookName</h2>
            <p><strong>Author(s):</strong> @string.Join(", ", FirstBook.Authors.Select(a => $"{a.FirstName} {a.LastName}"))</p>
            <p><strong>Published:</strong> @FirstBook.DateOfPublishment.ToString("MMMM dd, yyyy")</p>
            <p><strong>Genre:</strong> @FirstBook.Genre</p>
            <p><strong>Language:</strong> @FirstBook.Language</p>

            <!-- Кнопка купівлі -->
            <button class="btn btn-primary btn-lg mt-3">BUY</button>
        </div>
    </div>
</div>

@code {
    private List<Author> authors;
    private Book FirstBook;

    protected override void OnInitialized()
    {
        authors = new List<Author> { new Author("J.K.", "Rowling") };
        FirstBook = new Book("Harry Potter and the Philosopher's Stone", authors, new DateTime(1997, 6, 26), "Fantasy", "English", "/images/books/HarryPotter1.png");
    }
}
